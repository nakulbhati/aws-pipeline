[Unit]
Description=AWS CodeStar Sample ASP.NET Core Web Application

[Service]
WorkingDirectory=/home/ubuntu/aspnetcoreapp/
ExecStart=/usr/bin/dotnet /home/ubuntu/aspnetcoreapp/AspNetCoreWebApplication.dll
Restart=always
# Restart service after 10 seconds if dotnet service crashes
RestartSec=10
SyslogIdentifier=aspnetcoreapp
User=www-data
Environment=ASPNETCORE_ENVIRONMENT=Production 

[Install]
WantedBy=multi-user.target
